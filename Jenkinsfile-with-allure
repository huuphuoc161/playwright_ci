// Jenkinsfile-with-allure
// Focused on Allure reporting with trend charts
// Use this to generate Allure reports for trend analysis

pipeline {
    agent any
    
    environment {
        PYTHON_CMD = 'C:\\Users\\huuphuoc.nguyen\\AppData\\Local\\Python\\bin\\python3.exe'
        WORKSPACE_DIR = "${WORKSPACE}"
        REPORTS_DIR = "${WORKSPACE}\\reports"
        ALLURE_RESULTS = "${WORKSPACE}\\reports\\allure-results"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "üîÑ Checking out code..."
                checkout scm
            }
        }
        
        stage('Setup Environment') {
            steps {
                echo "‚öôÔ∏è  Setting up Python environment..."
                bat '''
                    %PYTHON_CMD% --version
                    %PYTHON_CMD% -m venv venv
                    call venv\\Scripts\\activate.bat
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }
        
        stage('Install Playwright') {
            steps {
                echo "üé≠ Installing Playwright browsers..."
                bat '''
                    call venv\\Scripts\\activate.bat
                    playwright install chromium
                '''
            }
        }
        
        stage('Run Tests') {
            steps {
                echo "üß™ Running tests with Allure reporting..."
                bat '''
                    call venv\\Scripts\\activate.bat
                    if not exist "%REPORTS_DIR%" mkdir "%REPORTS_DIR%"
                    
                    pytest tests\\login_suite.py -v ^
                        --junit-xml="%REPORTS_DIR%\\junit.xml" ^
                        --alluredir="%REPORTS_DIR%\\allure-results"
                '''
            }
        }
    }
    
    post {
        always {
            echo "üìä Publishing Allure report..."
            junit testResults: "${REPORTS_DIR}\\junit.xml", allowEmptyResults: true
            archiveArtifacts artifacts: "${REPORTS_DIR}/**/*", allowEmptyArchive: true
            
            script {
                if (fileExists("${REPORTS_DIR}\\allure-results")) {
                    echo "üìà Generating Allure report..."
                    try {
                        allure includeProperties: false,
                               jdk: '',
                               results: [[path: "${REPORTS_DIR}\\allure-results"]]
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è  Allure plugin not available: ${e.message}"
                    }
                }
            }
        }
        
        success {
            echo "‚úÖ Tests passed!"
        }
        
        failure {
            echo "‚ùå Tests failed!"
        }
    }
}
